---
import MainLayout from '../../layouts/MainLayout.astro';
import OfferCard from '../../components/ui/OfferCard.astro';
import Section from '../../components/sections/Section.astro';
import SectionTitle from '../../components/ui/SectionTitle.astro';
import CTASection from '../../components/sections/CTASection.astro';
import { OFFERS } from '../../utils/constants';
---

<MainLayout
  title="Nos offres - Growth Tempo"
  description="Découvrez nos 4 lignes de produit : Diagnostic, Growth Tempo, Lead Gen, Automation & AI Ops."
>
  <Section>
    <div class="mt-[140px] mb-10">
      <SectionTitle
        sectionTitle="Nos offres"
        description="4 lignes de produit nettes pour accélérer votre croissance."
      />
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10">
        {OFFERS.map((offer) => (
          <OfferCard
            index={offer.index}
            title={offer.title}
            promise={offer.promise}
            forWho={offer.forWho}
            ctaText={offer.ctaText}
            ctaLink={offer.ctaLink}
          />
        ))}
      </div>
    </div>
  </Section>

  <CTASection />
</MainLayout>
