---
import BaseLayout from '../../layouts/BaseLayout.astro';
import OfferCard from '../../components/cards/OfferCard.astro';
import CTASection from '../../components/sections/CTASection.astro';
import { OFFERS } from '../../utils/constants';
---

<BaseLayout
  title="Nos offres - Growth Tempo"
  description="Découvrez nos 4 lignes de produit : Diagnostic, Growth Tempo, Lead Gen, Automation & AI Ops."
>
  <section class="py-20 bg-gradient-to-b from-blue-50 to-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Nos offres
      </h1>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto">
        4 lignes de produit nettes pour accélérer votre croissance
      </p>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {OFFERS.map((offer) => (
          <OfferCard
            title={offer.title}
            promise={offer.promise}
            forWho={offer.forWho}
            ctaText={offer.ctaText}
            ctaLink={offer.ctaLink}
          />
        ))}
      </div>
    </div>
  </section>

  <CTASection />
</BaseLayout>
