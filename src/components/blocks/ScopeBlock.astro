---
interface Props {
  do: string[];
  dont: string[];
  sometimes?: string[];
}

const { do: doItems, dont, sometimes } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 my-8">
  <!-- On fait -->
  <div class="bg-green-50 border border-green-200 rounded-lg p-6">
    <h3 class="text-lg font-bold text-green-900 mb-4 flex items-center">
      <span class="mr-2">✓</span>
      On fait
    </h3>
    <ul class="space-y-2">
      {doItems.map((item) => (
        <li class="text-green-800 flex items-start">
          <span class="mr-2">•</span>
          <span>{item}</span>
        </li>
      ))}
    </ul>
  </div>

  <!-- On ne fait pas -->
  <div class="bg-red-50 border border-red-200 rounded-lg p-6">
    <h3 class="text-lg font-bold text-red-900 mb-4 flex items-center">
      <span class="mr-2">✗</span>
      On ne fait pas
    </h3>
    <ul class="space-y-2">
      {dont.map((item) => (
        <li class="text-red-800 flex items-start">
          <span class="mr-2">•</span>
          <span>{item}</span>
        </li>
      ))}
    </ul>
  </div>

  <!-- On fait parfois (optionnel) -->
  {sometimes && sometimes.length > 0 && (
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
      <h3 class="text-lg font-bold text-yellow-900 mb-4 flex items-center">
        <span class="mr-2">~</span>
        On fait parfois
      </h3>
      <ul class="space-y-2">
        {sometimes.map((item) => (
          <li class="text-yellow-800 flex items-start">
            <span class="mr-2">•</span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
  )}
</div>
