---
import Section from './Section.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import AccordionItem from '../ui/AccordionItem.astro';

interface Step {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  steps?: Step[];
  sectionTitle?: string;
  description?: string;
}

const defaultSteps: Step[] = [
  {
    title: 'Diagnose',
    description: 'Analyse de votre situation actuelle et identification des priorités',
  },
  {
    title: 'Build',
    description: 'Mise en place des systèmes, processus et outils nécessaires',
  },
  {
    title: 'Run',
    description: 'Exécution continue avec suivi, ajustements et améliorations',
  },
];

const { 
  steps = defaultSteps,
  sectionTitle = 'Comment on travaille',
  description = 'Guide étape par étape pour atteindre vos objectifs business'
} = Astro.props;
---

<Section id="services">
  <div class="mt-[140px]">
    <SectionTitle
      sectionTitle={sectionTitle}
      description={description}
    />
      
      <div class="space-y-[30px]">
        {steps.map((step, index) => (
          <div
            class="min-h-[160px] bg-[#F3F3F3] overflow-hidden w-full transition-all duration-500 rounded-[45px] border border-[#191a23] shadow-[0px_5px_0px_#191a23] hover:bg-[#b9ff66] hover:scale-105"
          >
            <div class="w-full min-h-[160px] flex items-center justify-between p-6 md:p-[60px]">
              <div class="flex items-center gap-4 md:gap-[25px]">
                <span class="hidden sm:block text-4xl md:text-6xl font-medium text-black">0{index + 1}</span>
                <h3 class="text-xl font-bold text-black">{step.title}</h3>
              </div>
              <div class="bg-white w-12 h-12 md:w-[58px] md:h-[58px] flex justify-center items-center rounded-full border border-[#191a23] flex-shrink-0">
                <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
            <div class="px-6 pb-6 md:px-[60px] md:pb-[60px]">
              <div class="w-full h-[2px] bg-black mb-4"></div>
              <p class="pt-5 text-black">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
  </div>
</Section>
