---
import { NAV_ITEMS } from "../../utils/constants";
---

<div
  class="bg-[#fff] fixed w-full top-0 z-10 py-[30px] h-auto flex justify-center"
>
  <nav
    aria-label="Main Navigation"
    role="navigation"
    class="w-full flex h-full items-center justify-between"
    style="max-width: 1280px; padding: 0 1rem;"
  >
    <!-- Brand -->
    <div class="pl-4 lg:flex-none">
      <a href="/" class="hover:opacity-80 transition-opacity">
        <span class="text-2xl font-bold text-black no-underline">Growth Tempo</span>
      </a>
    </div>

    <!-- Nav Menu -->
    <div
      id="navmenu"
      class="bg-[#fff] w-full absolute top-full left-0 z-10 lg:static lg:flex lg:flex-grow lg:items-center lg:justify-center overflow-hidden transition-all duration-500 h-0 lg:h-auto shadow-lg lg:shadow-none"
    >
      <ul class="list-none lg:flex lg:flex-grow lg:justify-center lg:gap-10 py-4 lg:py-0">
        {
          NAV_ITEMS.map((item) => {
            return (
              <li class="lg:mx-0">
                <a
                  href={item.href}
                  class="block px-6 py-3 lg:px-0 lg:py-0 text-black hover:text-[#b9ff66] transition-colors font-medium no-underline"
                >
                  {item.label}
                </a>
              </li>
            );
          })
        }
      </ul>

      <div class="flex lg:flex-row lg:items-center px-6 pb-4 lg:px-0 lg:pb-0 lg:gap-4 flex-col border-t border-[#f3f3f3] lg:border-0 pt-4 lg:pt-0 mt-2 lg:mt-0">
        <a href="/contact" class="btn-secondary w-full lg:w-auto text-center no-underline">Contact</a>
      </div>
    </div>

    <!-- Hamburger menu -->
    <button
      aria-label="menu"
      role="button"
      aria-controls="navmenu"
      aria-expanded="false"
      id="menuButton"
      class="w-12 h-12 lg:hidden pr-4 cursor-pointer flex items-center justify-center hover:bg-[#f3f3f3] rounded-lg transition-colors"
    >
      <svg
        id="menuIcon"
        class="h-6 w-6 text-black"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
          class="transition-all duration-300"
        />
      </svg>
    </button>
  </nav>
</div>
<script>
  document.addEventListener("DOMContentLoaded", (_) => {
    const menuButton = document.getElementById("menuButton");
    const navMenu = document.getElementById("navmenu");
    const menuIcon = document.getElementById("menuIcon");

    let isMenuOpen = false;

    if (menuButton && navMenu && menuIcon) {
      menuButton.addEventListener("click", () => {
        isMenuOpen = !isMenuOpen;
        menuButton.setAttribute("aria-expanded", `${isMenuOpen}`);

        if (isMenuOpen) {
          navMenu.style.height = `${navMenu.scrollHeight}px`;
          menuIcon.innerHTML = `
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" class="transition-all duration-300" />
          `;
        } else {
          navMenu.style.height = "0px";
          menuIcon.innerHTML = `
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" class="transition-all duration-300" />
          `;
        }
      });

      const menuLinks = navMenu.querySelectorAll("a");
      menuLinks.forEach((link) => {
        link.addEventListener("click", () => {
          if (isMenuOpen) {
            isMenuOpen = false;
            navMenu.style.height = "0px";
            menuButton.setAttribute("aria-expanded", "false");
          }
        });
      });

      window.addEventListener("resize", () => {
        if (window.innerWidth >= 1024) {
          navMenu.style.height = "auto";
          navMenu.classList.remove("h-0");
          isMenuOpen = false;
          menuButton.setAttribute("aria-expanded", "false");
        } else {
          navMenu.style.height = "0px";
        }
      });
    }
  });
</script>
